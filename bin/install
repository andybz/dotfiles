#!/usr/bin/env bash
set -e

files=".gitconfig.local
.tmux.conf.local
.vimbundle.local
.vimrc.local
.zshrc.local"

for dotfile in $files; do
  echo "Linking $dotfile"
  path="$HOME/$dotfile"
  ln -nfs $PWD/$dotfile $path
done

echo -e "\nDone!"
echo -e "\nNote: your shell must be reloaded for .zshrc.local changes to take effect."
